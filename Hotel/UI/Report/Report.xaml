<Window x:Class="Hotel.UI.Report.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.UI.Report"
        mc:Ignorable="d"
         WindowStyle="None"
        ResizeMode="NoResize"
        Title="Report" Height="260" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF36870C" Name="reportGrid" >
        <Label Foreground="#FFEEE1E1" FontSize="30" Margin="0,0,10,211" Padding="20,5,5,5"> Report </Label>
        <Label FontSize="20" Margin="0,54,0,158" Padding="20,5,5,5" Foreground="#FFEEE1E1" Content="{Binding Path=message}"></Label>
        <Label FontSize="20" Margin="0,128,0,98" Padding="20,5,5,5" Foreground="#FFEEE1E1" Content="{Binding Path= id }"></Label>
        <Button Margin="641,212,0,0" Background="#FFD6D6D6" FontSize="30" Foreground="#FF22640A" Click="Button_Click"> OK </Button>

    </Grid>
</Window>
